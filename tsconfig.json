{
	"compilerOptions": {
		"moduleResolution": "node",
		"esModuleInterop": true,
		"target": "ES6",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"skipLibCheck": true,
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*", "global.d.ts"],
	"exclude": ["node_modules"]
}
